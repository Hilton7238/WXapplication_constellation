/**index.wxss**/
view {
  margin-left: 5px;
  margin-right: 5px;
}
.search-box {
  position: relative;
}
.search {
  font-size: 12px;
  border: 2px solid ;
  height: 42px;
  border-radius: 42px;
  background-color: #F9f0da;
  padding-left: 10px;
}
.search-icon {
  position: absolute;
  top: 12px;
  right: 10px;
  width: 30px;
  height: 30px;
  z-index: 2;
}
.content {
  display: flex;
  background-color: #FF9999;
  border-radius: 10%;
  margin-top: 8px;
}
.content view text {
  color: #FFFFFF;
  font-size: 14px;
}
.content view {
  margin-left: 10px;
}
.img-box {
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav {
  display: flex;
}
.nav-content {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: 60px;
  width: 25%;
  margin-right: 5px;
  margin-top: 10px;
  background-color: #FF9999;
  color: #FFFFFF;
  border-radius: 40px;
}
.line-box {
  margin-top: 10px;
}
.line-box text {
  font-size: 16px;
  font-weight: 600;
}
.line{
  width: 98%;
  margin-right: 5px;
  border-top:1px #989898 solid;
}