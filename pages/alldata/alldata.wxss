view {
    margin-left: 5px;
    margin-right: 5px;
  }
.line-box {
    margin-top: 10px;
  }
  .line-box text {
    font-size: 16px;
    font-weight: 600;
  }
  .line{
    width: 98%;
    margin-right: 5px;
    border-top:1px #989898 solid;
  }
  .content {
    padding-left: 15px;
    background-color: #FF9999;
    border-radius: 25px;
    margin-top: 8px;
  }
  .content text {
    color: #FFFFFF;
    font-size: 14px;
  }
  .content text .bold {
    font-weight: 600;
    font-size: 15px;
  }
  .img {
    margin: 0 auto;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #FF9999;
    border-radius: 50%;
    width: 160px;
    height: 155px;
  }
  .img-box {
    text-align: center;
  }